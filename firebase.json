{
  "hosting": {
    "public": "build",
    "ignore": [
      ".firebaserc",
      ".firebase",
      ".gitignore",
      "*.json",
      "*.code-workspace",
      "**/.*",
      ".*",
      "*.log",
      "*.cache"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
